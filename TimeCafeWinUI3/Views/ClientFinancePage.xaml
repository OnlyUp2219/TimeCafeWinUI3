<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="TimeCafeWinUI3.Views.ClientFinancePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="using:CommunityToolkit.WinUI.UI.Animations"
    xmlns:behaviors="using:TimeCafeWinUI3.Behaviors"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:TimeCafeWinUI3.Helpers"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:TimeCafeWinUI3.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:vm="using:TimeCafeWinUI3.ViewModels"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
        <Grid.BackgroundTransition>
            <BrushTransition />
        </Grid.BackgroundTransition>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <StackPanel Grid.Row="0">
            <TextBlock Style="{ThemeResource TitleTextBlockStyle}" Text="Финансы клиента" />
            <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="{x:Bind ViewModel.ClientName, Mode=OneWay}" />
        </StackPanel>

        <!--  Balance Cards  -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="16" HorizontalAlignment="Stretch">

            <!--  Current Balance  -->
            <Border
                Padding="24,8,24,8"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8">
                <StackPanel>
                    <TextBlock Style="{ThemeResource CaptionTextBlockStyle}" Text="Текущий баланс" />
                    <TextBlock Style="{ThemeResource TitleTextBlockStyle}" Text="{x:Bind ViewModel.CurrentBalance, Converter={StaticResource PriceConverter}, Mode=OneWay}" />
                </StackPanel>
            </Border>

            <!--  Debt  -->
            <Border
                Padding="24,8,24,8"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8">
                <StackPanel>
                    <TextBlock Style="{ThemeResource CaptionTextBlockStyle}" Text="Задолженность" />
                    <TextBlock
                        Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                        Style="{ThemeResource TitleTextBlockStyle}"
                        Text="{x:Bind ViewModel.CurrentDebt, Converter={StaticResource PriceConverter}, Mode=OneWay}"
                        Visibility="{x:Bind ViewModel.CurrentDebt, Converter={StaticResource NullToVisibilityConverter}, Mode=OneWay}" />
                    <TextBlock
                        Style="{ThemeResource TitleTextBlockStyle}"
                        Text="Нет долгов"
                        Visibility="{x:Bind ViewModel.CurrentDebt, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse, Mode=OneWay}" />
                </StackPanel>
            </Border>

            <!--  Actions  -->
            <StackPanel
                Spacing="8">
                <Button
                    Command="{x:Bind ViewModel.PayFullDebtCommand}"
                    Content="Погасить полностью"
                    Style="{StaticResource AccentButtonStyle}"
                    Visibility="{x:Bind ViewModel.CurrentDebt, Converter={StaticResource NullToVisibilityConverter}, Mode=OneWay}" />
                <Button Command="{x:Bind ViewModel.ClearMessagesCommand}" Content="Очистить сообщения" />
            </StackPanel>
        </StackPanel>

        <!--  Main Content  -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Messages  -->
            <StackPanel
                Grid.Row="0"
                Margin="0,0,0,16"
                Spacing="8">
                <TextBlock
                    Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                    IsTextSelectionEnabled="True"
                    Text="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                    Visibility="{x:Bind ViewModel.ErrorMessage, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}" />
                <TextBlock
                    Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                    IsTextSelectionEnabled="True"
                    Text="{x:Bind ViewModel.SuccessMessage, Mode=OneWay}"
                    Visibility="{x:Bind ViewModel.SuccessMessage, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}" />
            </StackPanel>

            <!--  Deposit Form and Transactions  -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="25"/>
                </Grid.RowDefinitions>

                <!--  Deposit Form  -->
                <Border
                    Grid.Column="0"
                    Margin="0,0,16,0"
                    Padding="16"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <StackPanel Spacing="16">
                        <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="Пополнение депозита" />

                        <NumberBox
                            Header="Сумма пополнения"
                            LargeChange="1000"
                            Minimum="0"
                            PlaceholderText="Введите сумму"
                            SmallChange="100"
                            SpinButtonPlacementMode="Compact"
                            Value="{x:Bind ViewModel.DepositAmount, Converter={StaticResource DecimalToDoubleConverter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <TextBox
                            Header="Комментарий"
                            PlaceholderText="Необязательно"
                            Text="{x:Bind ViewModel.DepositComment, Mode=TwoWay}" />

                        <Button
                            Command="{x:Bind ViewModel.DepositCommand}"
                            Content="Пополнить"
                            IsEnabled="{x:Bind ViewModel.IsDepositLoading, Converter={StaticResource BooleanNegationConverter}, Mode=OneWay}"
                            Style="{StaticResource AccentButtonStyle}" />

                        <ProgressRing IsActive="{x:Bind ViewModel.IsDepositLoading, Mode=OneWay}" Visibility="{x:Bind ViewModel.IsDepositLoading, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    </StackPanel>
                </Border>

                <!--  Debt Payment Form  -->
                <Border
                    Grid.Column="0"
                    Grid.Row="1"
                    Margin="0,16,16,0"
                    Padding="16"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <StackPanel Spacing="16">
                        <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="Погашение задолженности" />

                        <NumberBox
                            Header="Сумма погашения"
                            LargeChange="1000"
                            Minimum="0"
                            PlaceholderText="Введите сумму"
                            SmallChange="100"
                            SpinButtonPlacementMode="Compact"
                            Value="{x:Bind ViewModel.DebtPaymentAmount, Converter={StaticResource DecimalToDoubleConverter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <TextBox
                            Header="Комментарий"
                            PlaceholderText="Необязательно"
                            Text="{x:Bind ViewModel.DebtPaymentComment, Mode=TwoWay}" />

                        <Button
                            Command="{x:Bind ViewModel.PayDebtCommand}"
                            Content="Погасить"
                            IsEnabled="{x:Bind ViewModel.IsDebtPaymentLoading, Converter={StaticResource BooleanNegationConverter}, Mode=OneWay}"
                            Style="{StaticResource AccentButtonStyle}" />

                        <ProgressRing IsActive="{x:Bind ViewModel.IsDebtPaymentLoading, Mode=OneWay}" Visibility="{x:Bind ViewModel.IsDebtPaymentLoading, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    </StackPanel>
                </Border>

                <!--  Transactions History  -->
                <Border
                    Grid.Column="2"
                    Grid.RowSpan="2"
                    Padding="16"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <StackPanel>
                        <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="История транзакций" />

                        <ListView Margin="0,16,0,0" ItemsSource="{x:Bind ViewModel.Transactions, Mode=OneWay}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,8" Padding="12" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8">
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{Binding TransactionDate, Converter={StaticResource DateTimeFormatConverter}}" />
                                            <TextBlock Text="{Binding TransactionType.TransactionTypeName}" />
                                            <TextBlock Foreground="{Binding TransactionTypeId, Converter={StaticResource StatusColorConverter}, ConverterParameter=Transaction}" Text="{Binding Amount, Converter={StaticResource PriceConverter}}" />
                                            <TextBlock Text="Посещение: {Binding VisitId}" Visibility="{Binding VisitId, Converter={StaticResource NullToVisibilityConverter}}" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page> 