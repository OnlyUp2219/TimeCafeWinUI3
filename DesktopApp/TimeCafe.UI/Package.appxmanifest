    Version="1.0.4.0" />
    
  <mp:PhoneIdentity PhoneProductId="ba83e89d-c149-4540-b94c-0244e0ca9ff0" PhonePublisherId="00000000-0000-0000-0000-000000000000"/>
    
  <Properties>
    <DisplayName>TimeCafe.UI</DisplayName>
    <PublisherDisplayName>Asus</PublisherDisplayName>
    <Logo>Assets\StoreLogo.png</Logo>
