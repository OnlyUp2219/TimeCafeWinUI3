<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="TimeCafe.UI.Views.PhoneVerificationConfirm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TimeCafe.UI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollView>

        <Grid Padding="20">
            <StackPanel Spacing="16">
                <TextBlock
                    Style="{StaticResource TitleTextBlockStyle}"
                    Text="Подтверждение номера телефона"
                    TextWrapping="Wrap" />

                <TextBlock
                    Style="{StaticResource BodyStrongTextBlockStyle}"
                    Text="Это ваш номер телефона?"
                    TextWrapping="Wrap" />

                <TextBlock
                    x:Name="PhoneNumberText"
                    x:FieldModifier="public"
                    Style="{StaticResource BodyTextBlockStyle}"
                    Text="{Binding PhoneNumber}"
                    TextWrapping="Wrap" />

                <TextBox
                    x:Name="VerificationCodeInput"
                    HorizontalAlignment="Stretch"
                    x:FieldModifier="public"
                    MaxLength="6"
                    PlaceholderText="Введите код подтверждения (12345)" />

                <TextBlock
                    x:Name="ErrorText"
                    x:FieldModifier="public"
                    Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                    Text="{Binding ErrorMessage}"
                    TextWrapping="Wrap"
                    Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}" />

                <TextBlock
                    x:Name="CodeInfoText"
                    x:FieldModifier="public"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Text="Код подтверждения будет отправлен на указанный номер телефона (временное решение - имитация SMS)"
                    TextWrapping="Wrap" />
            </StackPanel>
        </Grid>
    </ScrollView>

</Page>
