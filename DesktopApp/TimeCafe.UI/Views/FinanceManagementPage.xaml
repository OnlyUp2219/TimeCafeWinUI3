<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="TimeCafe.UI.Views.FinanceManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="using:CommunityToolkit.WinUI.UI.Animations"
    xmlns:behaviors="using:CommunityToolkit.WinUI.Behaviors"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:controlsAdaptiveGrid="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:TimeCafe.UI.Views"
    xmlns:m="using:TimeCafe.UI.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:vm="using:TimeCafe.UI.ViewModels"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea" Padding="0,0,0,8">
        <Grid.BackgroundTransition>
            <BrushTransition />
        </Grid.BackgroundTransition>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <!--  Statistics and Filters  -->
        <controlsAdaptiveGrid:AdaptiveGridView
            Grid.Row="0"
            IsItemClickEnabled="False"
            OneRowModeEnabled="False"
            SelectionMode="None">
            <!--  Statistics Cards  -->
            <StackPanel
                Margin="0,0,8,0"
                Orientation="Horizontal"
                Spacing="8">
                <Border
                    Padding="16"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <StackPanel>
                        <TextBlock Style="{ThemeResource CaptionTextBlockStyle}" Text="Общая задолженность" />
                        <TextBlock
                            Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                            Style="{ThemeResource TitleTextBlockStyle}"
                            Text="{x:Bind ViewModel.TotalDebt, Converter={StaticResource PriceConverter}, Mode=OneWay}" />
                    </StackPanel>
                </Border>

                <Border
                    Padding="16"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <StackPanel>
                        <TextBlock Style="{ThemeResource CaptionTextBlockStyle}" Text="Клиентов с долгами" />
                        <TextBlock
                            Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                            Style="{ThemeResource TitleTextBlockStyle}"
                            Text="{x:Bind ViewModel.DebtorsCount, Mode=OneWay}" />
                    </StackPanel>
                </Border>
            </StackPanel>

            <!--  Search  -->
            <TextBox
                Margin="0,0,8,0"
                PlaceholderText="Поиск по имени или телефону"
                Text="{x:Bind ViewModel.SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <!--  Filters  -->
            <StackPanel
                Margin="0,0,8,0"
                Orientation="Horizontal"
                Spacing="8">
                <ToggleSwitch Header="Только должники" IsOn="{x:Bind ViewModel.ShowOnlyDebtors, Mode=TwoWay}" />
                <Button Command="{x:Bind ViewModel.RefreshDataCommand}" Content="Обновить" />
            </StackPanel>
        </controlsAdaptiveGrid:AdaptiveGridView>

        <!--  Clients Table  -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Error Message  -->
            <TextBlock
                Grid.Row="0"
                Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                IsTextSelectionEnabled="True"
                Style="{StaticResource BodyStrongTextBlockStyle}"
                Text="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                TextWrapping="Wrap"
                Visibility="{x:Bind ViewModel.ErrorMessage, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}" />

            <Grid
                x:Name="ListViewContainer"
                Grid.Row="1"
                SizeChanged="ListViewContainer_SizeChanged">
                <!--  Loading  -->
                <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />

                <!--  Data Table  -->
                <ListView
                    x:Name="ClientsListView"
                    MinWidth="720"
                    MinHeight="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    ItemsSource="{Binding FilteredClients}"
                    ScrollViewer.HorizontalScrollBarVisibility="Visible"
                    ScrollViewer.HorizontalScrollMode="Enabled"
                    ScrollViewer.IsHorizontalRailEnabled="True">
                    <ListView.Header>
                        <Border
                            Padding="8,4,0,4"
                            Background="{ThemeResource SolidBackgroundFillColorTertiaryBrush}"
                            CornerRadius="4">
                            <interactivity:Interaction.Behaviors>
                                <behaviors:StickyHeaderBehavior />
                            </interactivity:Interaction.Behaviors>
                            <controls:DataTable ColumnSpacing="16">
                                <controls:DataColumn Content="Клиент" />
                                <controls:DataColumn Content="Телефон" />
                                <controls:DataColumn Content="Баланс" />
                                <controls:DataColumn Content="Задолженность" />
                                <controls:DataColumn Content="Статус" />
                                <controls:DataColumn Content="Действия" />
                            </controls:DataTable>
                        </Border>
                    </ListView.Header>
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="m:ClientBalanceInfo">
                            <controls:DataRow HorizontalAlignment="Left">
                                <TextBlock VerticalAlignment="Center" Text="{Binding FullName}" />
                                <TextBlock VerticalAlignment="Center" Text="{Binding PhoneNumber}" />
                                <TextBlock VerticalAlignment="Center" Text="{Binding Balance, Converter={StaticResource PriceConverter}}" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                                    Text="{Binding Debt, Converter={StaticResource PriceConverter}}" />
                                <TextBlock VerticalAlignment="Center" Text="Нет" />
                                <Button
                                    Click="NavigateToClientDetail_Click"
                                    Content="Детали"
                                    Style="{StaticResource DefaultButtonStyle}"
                                    Tag="{Binding}" />
                            </controls:DataRow>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemContainerStyle>
                        <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Left" />
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>

            </Grid>

        </Grid>
    </Grid>
</Page> 